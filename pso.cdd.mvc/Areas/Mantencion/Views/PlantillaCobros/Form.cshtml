@model pso.cdd.model.valor_hh
<style type='text/css'>
    label.error {
        color: red;
    }

    .error {
        color: #f0ad4e;
    }

    .formcolor {
        background-color: #f5f5f5;
    }

    hr {
        background-color: #dcdcdb;
        height: 1.5px;
        border: 0;
        color: #f5f5f5;
    }

    #cabecera_tab1, #cabecera_tab2 {
        color: black !important;
    }
</style>
<div class="jarviswidget jarviswidget-color-orange jarviswidget-sortable form-horizontal" data-widget-editbutton="false" data-widget-custombutton="false" role="widget" style="position: relative; opacity: 1; left: 0px; top: 0px;">
    <header role="heading">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
            <span class="widget-icon"> <i class="fa fa-times"></i></span>
        </button>
        <span class="widget-icon"> <i class="fa fa-edit"></i></span>
        <h2 id="myModalLabel">@(Model == null ? "Formulario Cobros" : "Editar") </h2>
    </header>

    <!-- widget div-->
    <div role="content">
        @using (Html.BeginForm((Model == null ? "Create" : "Edit"), "PlantillaCobros", FormMethod.Post, new { @id = "mant-form", @class = "smart-form", @novalidate = "novalidate" }))
        {
            @Html.AntiForgeryToken()
            @(Model == null ? new MvcHtmlString("") : Html.HiddenFor(model => model.id_valor))
            @*@Html.HiddenFor(model => model)*@
   
        <!-- contenido widget-->
            <div class="widget-body form-horizontal">
                <form class="smart-form">
                    <header>
                        <h2 class="table table-striped table-hover">Nuevo Cobro</h2>
                    </header>

                    <div class="formcolor" style="padding:20px;">
                        <div class="form-group">
                            <label class="label col-lg-6">Cliente</label>
                            <label class="select col-lg-6">
                                <i class="icon-append fa fa-cog"></i>
                                @Html.DropDownListFor(model => model.id_emp, null, "Seleccione...")
                            </label>
                       </div>
                        <br/>
                        <div class="form-group">
                            <label class="label col-lg-6">Unidad</label>
                            <label class="select col-lg-6">
                                <i class="icon-append fa fa-cog"></i>
                                @Html.DropDownListFor(model => model.id_unidad, null, "Seleccione...")
                            </label>
                        </div>
                        <br />
                         <div class="form-group">
                                <label class="label col-lg-6">Tipo Cargo</label>
                                <label class="select col-lg-6">
                                    <i class="icon-append fa fa-cog"></i>
                                    @Html.DropDownListFor(model => model.id_cargo, null, "Seleccione...")
                                </label>
                        </div>
                        <br />
                         <div class="form-group">
                                 <label class="label col-lg-6">Valor en UF</label>
                                 <label class="input col-lg-6">
                                     <i class="icon-append glyphicon glyphicon-usd"></i>
                                     @Html.TextBoxFor(model => model.valor, new { @type = "number", min = "0" })
                                 </label>
                         </div>
                    </div>

                    <footer>
                        <div>
                            <button type="button" class="btn btn-default" data-dismiss="modal">
                                Cancelar
                            </button>
                            <button type="button" class="btn btn-warning" action="save">
                                Grabar Registro
                            </button>
                        </div>
                    </footer>
                </form>
            </div>
        }
    </div>
</div>

<script>
        pageSetUp();
        setFormulario(
            "mant-form",
            {
                id_emp: { required: true },
                id_unidad: { required: true },
                id_cargo: { required: true },
                valor:{ required: true}
            },
            {
                id_emp: { required: '<span class="help-block error" ><i class="fa fa-warning"></i> Ingrese el Cliente</span> ' },
                id_unidad: { required: '<span class="help-block error" ><i class="fa fa-warning"></i> Ingrese la unidad</span> ' },
                id_cargo: { required: '<span class="help-block error" ><i class="fa fa-warning"></i> Ingrese el cargo</span> ' },
                valor: { required: '<span class="help-block error" ><i class="fa fa-warning"></i> Ingrese el valor UF</span> ' }
            }
        );

</script>



   