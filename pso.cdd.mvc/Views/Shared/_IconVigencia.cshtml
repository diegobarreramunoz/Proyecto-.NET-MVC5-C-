@model bool
@if (Model) {
    <span class="badge bg-color-green" data-original-title="Vigente" rel="tooltip" data-placement="bottom"><i class="fa fa-check"></i></span>
} else {
    <span class="badge bg-color-red" data-original-title="No Vigente" rel="tooltip" data-placement="bottom"><i class="glyphicon glyphicon-remove-circle"></i></span>
}