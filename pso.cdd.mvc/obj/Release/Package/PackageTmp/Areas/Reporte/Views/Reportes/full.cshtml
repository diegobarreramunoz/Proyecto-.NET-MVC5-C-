@model IEnumerable<pso.cdd.model.cab_ts>

@{
    ViewBag.Title = "full";
}
 <style>
     .placeholder{ font-size:12px; padding:2px;  }
 </style>
<div class="row">


    @*<link href="~/css/datatables.min.css" rel="stylesheet" />*@

    <script type="text/javascript" src="~/js/plugin/datatables/dataTables.bootstrap.min.js"></script>

    <table id="dt_basic" class="table table-striped table-bordered table-hover table-responsive placeholder" width="100%" role="grid" aria-describedby="datatable_col_reorder_info" style="width: 100%;">

        <thead>
            <tr>
                <th>  <input type="text" class="form-control placeholder" placeholder=@Html.DisplayNameFor(model => model.fecha) /></th>
                <th>  <input type="text" class="form-control placeholder" placeholder=@Html.DisplayNameFor(model => model.horas) /></th>
                <th>  <input type="text" class="form-control placeholder" placeholder=@Html.DisplayNameFor(model => model.descuento) /></th>
                <th>  <input type="text" class="form-control placeholder" placeholder=@Html.DisplayNameFor(model => model.fecha_mod) /></th>
                <th>  <input type="text" class="form-control placeholder" placeholder=@Html.DisplayNameFor(model => model.usuario_mod) /></th>
                <th>  <input type="text" class="form-control placeholder" placeholder=@Html.DisplayNameFor(model => model.valor_hh) /></th>
                <th>  <input type="text" class="form-control placeholder" placeholder=@Html.DisplayNameFor(model => model.categorias.nom_cat) /></th>
                <th>  <input type="text" class="form-control placeholder" placeholder=@Html.DisplayNameFor(model => model.empresas.nom_emp) /></th>
                <th>  <input type="text" class="form-control placeholder" placeholder=@Html.DisplayNameFor(model => model.tipos_servicios.nom_tser) /></th>
                <th>  <input type="text" class="form-control placeholder" placeholder=@Html.DisplayNameFor(model => model.usuarios.Nom_usu) /></th>
                <th>  <input type="text" class="form-control placeholder" placeholder=@Html.DisplayNameFor(model => model.usuarios.unidades.nom_unidad) /></th>
                <th>  <input type="text" class="form-control placeholder" placeholder=@Html.DisplayNameFor(model => model.descr_esp) /></th>
                <th>  <input type="text" class="form-control placeholder" placeholder=@Html.DisplayNameFor(model => model.descr_ing) /></th>
            </tr>
            <tr role="row">
                <th data-hide="phone,tablet" class="sorting_asc visible"> @Html.DisplayNameFor(model => model.fecha)</th>
                <th data-hide="phone,tablet" class="sorting visible">@Html.DisplayNameFor(model => model.horas)</th>
                <th data-hide="phone,tablet">@Html.DisplayNameFor(model => model.descuento)</th>
                <th data-hide="phone" class="sorting">@Html.DisplayNameFor(model => model.fecha_mod)</th>
                <th data-hide="phone,tablet" class="sorting">@Html.DisplayNameFor(model => model.usuario_mod)</th>
                <th data-hide="phone,tablet" class="sorting">@Html.DisplayNameFor(model => model.valor_hh)</th>
                <th data-hide="phone,tablet" class="sorting">@Html.DisplayNameFor(model => model.categorias.nom_cat)</th>
                <th data-hide="phone" class="sorting">@Html.DisplayNameFor(model => model.empresas.nom_emp)</th>
                <th data-class="expand" class="expand sorting visible">@Html.DisplayNameFor(model => model.tipos_servicios.nom_tser)</th>
                <th data-hide="phone,tablet" class="sorting visible">@Html.DisplayNameFor(model => model.usuarios.Nom_usu)</th>
                <th data-hide="" class="sorting visble">@Html.DisplayNameFor(model => model.usuarios.unidades.nom_unidad)</th>
                <th data-hide="phone,tablet" class="sorting">@Html.DisplayNameFor(model => model.descr_esp)</th>
                <th data-hide="phone,tablet" class="sorting">@Html.DisplayNameFor(model => model.descr_ing)</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {

                <tr role="row" class="odd">
                    <td class="sorting_asc">@Html.DisplayFor(modelItem => item.fecha)</td>
                    <td class="expand">@{Decimal var = Decimal.Round((Decimal.Parse(item.horas.ToString()) / 60), 2);  } @Html.DisplayFor(modelItem => var)</td>
                    <td>@Html.DisplayFor(modelItem => item.descuento) </td>
                    <td>@Html.DisplayFor(modelItem => item.fecha_mod)</td>
                    <td>@Html.DisplayFor(modelItem => item.usuario_mod)</td>
                    <td>@Html.DisplayFor(modelItem => item.valor_hh)</td>
                    <td>@Html.DisplayFor(modelItem => item.categorias.nom_cat)</td>
                    <td>@Html.DisplayFor(modelItem => item.empresas.nom_emp)</td>
                    <td>@Html.DisplayFor(modelItem => item.tipos_servicios.nom_tser)</td>
                    <td>@Html.DisplayFor(modelItem => item.usuarios.Nom_usu)</td>
                    <td>@Html.DisplayFor(modelItem => item.usuarios.unidades.nom_unidad)</td>
                    <td width="200px;"><textarea class="descripcion">@Html.DisplayFor(modelItem => item.descr_esp)</textarea></td>
                    <td width="200px;"><textarea class="descripcion">@Html.DisplayFor(modelItem => item.descr_ing)</textarea></td>
                </tr>

                        }
        </tbody>
        <tfoot>
            <tr>
                <th>@Html.DisplayNameFor(model => model.fecha)</th>
                <th>@Html.DisplayNameFor(model => model.horas)</th>
                <th>@*@Html.DisplayNameFor(model => model.descuento)*@</th>
                <th>@*@Html.DisplayNameFor(model => model.fecha_mod)*@</th>
                <th>@*@Html.DisplayNameFor(model => model.usuario_mod)*@</th>
                <th>@*@Html.DisplayNameFor(model => model.valor_hh)*@</th>
                <th>@*@Html.DisplayNameFor(model => model.categorias.nom_cat)*@</th>
                <th>@*@Html.DisplayNameFor(model => model.empresas.nom_emp)*@</th>
                <th>@Html.DisplayNameFor(model => model.tipos_servicios.nom_tser)</th>
                <th>@Html.DisplayNameFor(model => model.usuarios.Nom_usu)</th>
                <th>@*@Html.DisplayNameFor(model => model.usuarios.unidades.nom_unidad)*@</th>
                <th>@*@Html.DisplayNameFor(model => model.descr_esp)*@</th>
                <th>@*@Html.DisplayNameFor(model => model.descr_ing)*@</th>

            </tr>
        </tfoot>

    </table>
</div>
 
<script type="text/javascript">
    pageSetUp();

    ver_markdown("descripcion");

    InicializaGrillaFiltro("dt_basic");
    activaModal();

</script>
