@model List<Dictionary<string, object>>
@{
    ViewBag.Title = "Index";
}

                <table id="dt_basic" class="table table-striped table-bordered table-hover display" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th class="hasinput" style="width:17%">
                                    <input type="text" class="form-control" placeholder="Filtrar por Mes" />
                                </th>
                                <th class="hasinput" style="width:18%">
                                    <input type="text" class="form-control" placeholder="Filtrar por Tipo Servicio" />
                                </th>
                                <th class="hasinput" style="width:16%">
                                    <input type="text" class="form-control" placeholder="Filtrar por Horas" />
                                </th>
                                <th class="hasinput" style="width:16%">
                                    <input type="text" class="form-control" placeholder="Filtrar por cantidad Registros" />
                                </th>
                            <tr>
                                <th class="visible">Meses</th>
                                <th class="visible">Tipo Servicio</th>
                                <th class="visible">Horas</th>
                                <th>Cantidad Registros</th>
                            </tr>

                        </thead>
                        <tfoot>
                            <tr>
                                <th></th>
                                <th></th>
                                <th></th>
                                <th></th>
                            </tr>
                        </tfoot>

                        <tbody>
                            

                @foreach (var item in Model)
                {
                            <tr>
                                <td>@item["mes"]</td>
                                <td>@item["nom_tser"]</td>
                                <td>@{Decimal var = Decimal.Round((Decimal.Parse(item["horas"].ToString()) / 60), 2);  } @Html.DisplayFor(modelItem => var)</td>
                                <td>@item["cuenta"]</td>
                            </tr>
                 }

                        </tbody>
                    </table>

                    






<script type="text/javascript">
    pageSetUp();
    InicializaGrillaFiltro("dt_basic");
    activaModal();

</script>

