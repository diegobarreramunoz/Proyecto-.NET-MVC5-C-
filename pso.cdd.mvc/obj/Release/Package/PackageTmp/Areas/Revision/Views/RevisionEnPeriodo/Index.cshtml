@model IEnumerable<pso.cdd.model.cab_ts>


<!---------------------------------------Tabla Responsiva------------------------------------------------------------------>

    <table id="dt_basic" class="table table-striped table-bordered table-hover" width="100%">
        <thead>
            <tr>
                <th></th>
                <th data-hide="phone,tablet">@Html.DisplayNameFor(model => model.usuarios.Nom_usu)</th>
                <th data-hide="phone,tablet">@Html.DisplayNameFor(model => model.dueño_grupo)</th>
                <th data-hide="phone,tablet">@Html.DisplayNameFor(model => model.empresas.nom_emp)</th>
                <th data-class="expand">@Html.DisplayNameFor(model => model.categorias.nom_cat)</th>
                <th data-hide="phone,tablet">@Html.DisplayNameFor(model => model.fecha)</th>
                <th data-hide="phone,tablet">@Html.DisplayNameFor(model => model.horas)</th>
                <th data-hide="phone,tablet">@Html.DisplayNameFor(model => model.descuento)</th>
                <th data-hide="phone,tablet">@Html.DisplayNameFor(model => model.descr_esp)</th>
                <th data-hide="phone,tablet" class="hide">@Html.DisplayNameFor(model => model.estado)</th>
                <th data-hide="">@Html.DisplayNameFor(model => model.tipos_servicios.nom_tser)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <button class="btn btn-default" href="@Url.Action("Edit", new { id = item.ts_id})" data-toggle="modal" data-target="#remoteModal"><i class="fa fa-edit"></i></button>
                    </td>
                    <td>@Html.DisplayFor(modelItem => item.usuarios.Nom_usu)</td>
                    <td>@{ string duenio_grupo = (item.dueño_grupo.ToString().Equals("S") ? "Si" : "No");}@Html.DisplayFor(modelItem => duenio_grupo)</td>
                    <td>@Html.DisplayFor(modelItem => item.empresas.nom_emp)</td>
                    <td>@Html.DisplayFor(modelItem => item.categorias.nom_cat)</td>
                    <td>@{ string fecha = item.fecha.ToString("dd-MMM-yy");}@Html.DisplayFor(modelItem => fecha)</td>
                    <td>@{Decimal var = Decimal.Round((Decimal.Parse(item.horas.ToString()) / 60), 2);  } @Html.DisplayFor(modelItem => var)</td>
                    <td>@Html.DisplayFor(modelItem => item.descuento)</td>
                    <td width="200px;"><textarea class="descripcion">@Html.DisplayFor(modelItem => item.descr_esp)</textarea></td>
                    <td class="hide">@Html.DisplayFor(modelItem => item.estado)</td>
                    <td>@Html.DisplayFor(modelItem => item.tipos_servicios.nom_tser)</td>
                </tr>
                        }
        </tbody>
    </table>
   
    <script type="text/javascript">
        pageSetUp();
  

        ver_markdown("descripcion");
        InicializaMantenedor("dt_basic");
        activaModal();
    </script>
