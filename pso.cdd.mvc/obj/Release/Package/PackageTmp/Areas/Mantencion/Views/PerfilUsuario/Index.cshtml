@model IEnumerable<pso.cdd.model.perfil_usuario>

<h1><i class="fa fa-users"></i> Plantilla /<span style="color:#3276b1;"> Perfiles de usuario</span></h1>

<!-----------------------------------------------Boton Ingresar Nuevo-------------------------------------------------------->

<section id="" class="table table-striped  table-hover" width="100%">
    <a href="@Url.Action("Create", "PerfilUsuario")" data-toggle="modal" data-target="#remoteModal" class="btn btn-warning btn-sm">Nuevo Perfil</a>
</section>

<!---------------------------------------Tabla Responsiva------------------------------------------------------------------>
<table id="dt_basic" class="table table-striped table-bordered table-hover" width="100%">
    <thead>
        <tr>
            <th></th>
            <th data-hide="">@Html.DisplayNameFor(model => model.usuarios.unidades.nom_unidad)</th>
            <th data-class="expand"><i class="text-muted hidden-md hidden-sm hidden-xs"></i>@Html.DisplayNameFor(model => model.usuarios.cargos.nom_cargo)</th>
            <th data-hide="phone"><i class="text-muted hidden-md hidden-sm hidden-xs"></i>@Html.DisplayNameFor(model => model.usuarios.Nom_usu)</th>
            <th>@Html.DisplayNameFor(model => model.usuarios.Nom_cor_usu)</th>
            <th data-hide="phone,tablet"><i class="txt-color-blue hidden-md hidden-sm hidden-xs"></i>@Html.DisplayNameFor(model => model.parametros.texto)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
            {
            <tr>
                <td>
                    <button class="btn btn-default" href="@Url.Action("Edit", new { id = item.id})" data-toggle="modal" data-target="#remoteModal"><i class="fa fa-edit"></i></button>
                    <button class="btn btn-default" onclick="confirmaElimina(this, '@Url.Action("Delete", new { id = item.id })');"><i class="fa fa-trash-o"></i></button>
                </td>
                <td>@Html.DisplayFor(modelItem => item.usuarios.unidades.nom_unidad)</td>
                <td>@Html.DisplayFor(modelItem => item.usuarios.cargos.nom_cargo)</td>
                <td>@Html.DisplayFor(modelItem => item.usuarios.Nom_usu)</td>
                <td>@Html.DisplayFor(modelItem => item.usuarios.Nom_cor_usu)</td>
                <td>@Html.DisplayFor(modelItem => item.parametros.texto)</td>
            </tr>
        }
    </tbody>
</table>
<script type="text/javascript">
        pageSetUp();
        InicializaMantenedor("dt_basic");
        activaModal();
</script>
