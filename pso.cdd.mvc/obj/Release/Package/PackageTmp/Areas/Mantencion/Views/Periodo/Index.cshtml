
@model IEnumerable<pso.cdd.model.periodos>
<header>
    <h2>@{     ViewBag.Title = "Index";    }</h2>
</header>

<h1><i class="glyphicon glyphicon-calendar"></i> Plantilla /<span style="color:#3276b1;"> Periodos</span></h1>

<!-----------------------------------------------Boton Ingresar Nuevo-------------------------------------------------------->

<section id="" class="table table-striped  table-hover" width="100%">

    <a href="@Url.Action("Create")" data-toggle="modal" data-target="#remoteModal" class="btn btn-warning btn-sm">Ingresar Periodo</a>

</section>
<!---------------------------------------Tabla Responsiva------------------------------------------------------------------>
<table id="dt_basic" class="table table-striped table-bordered table-hover" width="100%">
    <thead>
        <tr>
            <th></th>
            <th data-hide="">@Html.DisplayNameFor(model => model.fecha_ini)</th>
            <th data-class="expand">@Html.DisplayNameFor(model => model.fecha_fin)</th>
            <th data-hide="phone" class="hide">@Html.DisplayNameFor(model => model.estado)</th>
            <th>@Html.DisplayNameFor(model => model.fecha_mod)</th>
            <th data-hide="phone,tablet">@Html.DisplayNameFor(model => model.usuario_mod)</th>
            <th data-hide="phone,tablet">@Html.DisplayNameFor(model => model.tipos_servicios)</th>
            @*<th></th>*@

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
            {
            <tr>
                <td>
                    <button class="btn btn-default" href="@Url.Action("Edit", new { id = item.id_periodo})" data-toggle="modal" data-target="#remoteModal"><i class="fa fa-edit"></i></button>
                    <button class="btn btn-default" onclick="confirmaElimina(this, '@Url.Action("Delete", new { id = item.id_periodo })');"><i class="fa fa-trash-o"></i></button>
                </td>
                <td>@Html.DisplayFor(modelItem => item.fecha_ini)</td>
                <td>@Html.DisplayFor(modelItem => item.fecha_fin)</td>
                <td class="hide">@Html.DisplayFor(modelItem => item.estado)</td>
                <td>@Html.DisplayFor(modelItem => item.fecha_mod)</td>
                <td>@Html.DisplayFor(modelItem => item.usuario_mod)</td>
                <td>@Html.DisplayFor(modelItem => item.tipos_servicios.nom_tser)</td>
            </tr>
        }
    </tbody>
</table>
<script type="text/javascript">
        pageSetUp();
        InicializaMantenedor("dt_basic");
        activaModal();
</script>
