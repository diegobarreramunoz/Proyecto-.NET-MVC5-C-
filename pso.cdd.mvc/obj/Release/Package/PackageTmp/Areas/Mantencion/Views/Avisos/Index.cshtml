@model IEnumerable<pso.cdd.model.avisos>

<h1><i class="glyphicon glyphicon-pushpin"></i> Plantilla /<span style="color:#3276b1;"> Avisos</span></h1>


<!--   Se crea Dictionary para colores de glyphicon glyphicon-pushpin -->
@{
    //Dictionary<string, string> example = new Dictionary<string, string>();
    //example.Add("btn bg-color-orange", "");
    //example.Add("btn bg-color-darken", "");
    //example.Add("btn bg-color-blue", "");
    //example.Add("btn bg-color-greenLight", "");
    //example.Add("btn bg-color-blueLight", "");
    //example.Add("btn bg-color-red", "");

    Dictionary<string, string> colores_rgb = new Dictionary<string, string>();
    colores_rgb.Add("btn bg-color-darken", "#404040");
    colores_rgb.Add("btn bg-color-blue", "#57889c");
    colores_rgb.Add("btn bg-color-orange", "#c79121");
    colores_rgb.Add("btn bg-color-greenLight", "#71843f");
    colores_rgb.Add("btn bg-color-blueLight", "#92a2a8");
    colores_rgb.Add("btn bg-color-red", "#a90329");

}

<!-----------------------------------------------Boton Ingresar Nuevo-------------------------------------------------------->

<section id="" class="table table-striped  table-hover" width="100%">
    <a href="@Url.Action("Avisos_Create")" data-toggle="modal" data-target="#remoteModal" class="btn btn-warning btn-sm">Ingresar Nuevo</a>
</section>

<!---------------------------------------Tabla Responsiva------------------------------------------------------------------>
<table id="dt_basic" class="table table-striped table-bordered table-hover" width="100%">
    <thead>
        <tr>
            <th></th>
            <th data-hide="">@Html.DisplayNameFor(model => model.fecha_ini)</th>
            <th data-class="expand"><i class="text-muted hidden-md hidden-sm hidden-xs"></i>@Html.DisplayNameFor(model => model.fecha_fin)</th>
            <th data-hide="phone,tablet"><i class="text-muted hidden-md hidden-sm hidden-xs"></i>@Html.DisplayNameFor(model => model.msg)</th>
            
            <th data-hide="phone,tablet">@Html.DisplayNameFor(model => model.fecha_mod)</th>
            <th data-hide="phone,tablet">@Html.DisplayNameFor(model => model.usuario_mod)</th>
            <th data-hide="phone,tablet" class="hide">@Html.DisplayNameFor(model => model.estado)</th>
            <th>#@*@Html.DisplayNameFor(model => model.tipo_aviso)*@</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
            {
            <tr>
                <td>
                    <button class="btn btn-default" href="@Url.Action("Edit", new { id = item.id_aviso})" data-toggle="modal" data-target="#remoteModal"><i class="fa fa-edit"></i></button>
                    <button class="btn btn-default" onclick="confirmaElimina(this, '@Url.Action("Delete", new { id = item.id_aviso })');"><i class="fa fa-trash-o"></i></button>
                </td>
                <td>@Html.DisplayFor(modelItem => item.fecha_ini)</td>
                <td>@Html.DisplayFor(modelItem => item.fecha_fin)</td>
                <td>@Html.DisplayFor(modelItem => item.msg)</td>
                
                <td>@Html.DisplayFor(modelItem => item.fecha_mod)</td>
                <td>@Html.DisplayFor(modelItem => item.usuario_mod)</td>
                <td class="hide">@Html.DisplayFor(modelItem => item.estado)</td>
                <td class="">@*@Html.Raw(example[item.tipo_aviso])*@<i class="glyphicon glyphicon-pushpin" style="color:@Html.Raw(colores_rgb[item.tipo_aviso])"></i></td>

            </tr>
        }
    </tbody>
</table>
<script type="text/javascript">
        pageSetUp();
        InicializaMantenedor("dt_basic");
        activaModal();
</script>
